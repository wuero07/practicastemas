<resources>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/theme1Background</item>

        <item name="android:buttonStyle">@style/ButtonStyle1</item>
        <item name="android:textViewStyle">@style/TextViewStyle1</item>
    </style>

    <style name="ButtonStyle1" parent="Widget.AppCompat.Button">
        <item name="android:background">#FFDDDD</item>
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="TextViewStyle1" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FF0000</item>
    </style>


    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:windowBackground">@color/theme2Background</item>

        <item name="android:buttonStyle">@style/ButtonStyle2</item>
        <item name="android:textViewStyle">@style/TextViewStyle2</item>
    </style>

    <style name="ButtonStyle2" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">#0000FF</item>
    </style>

    <style name="TextViewStyle2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#0000FF</item>
    </style>
</resources>
